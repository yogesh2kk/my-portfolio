---
import { Image } from "astro:assets";

// ✅ Use YOUR existing images in /public (based on your folder screenshot)
import bankruptcyImg from "../../public/bankruptcy.png";
import volatilityImg from "../../public/volatility.png";
import walmartImg from "../../public/walmart.png";
import recommenderImg from "../../public/recommendationsyetem.png";

interface Project {
  title: string;
  image: ImageMetadata;
  repo: string;
  status: string;
  highlight: string;
}

const projects: Project[] = [
  {
    title: "Bankruptcy Prediction (Poland)",
    image: bankruptcyImg as ImageMetadata,
    repo: "https://github.com/yogesh2kk/WQU-Data-Science-Lab/tree/main/050-bankruptcy-in-poland",
    status: "Case Study",
    highlight:
      "Handled class imbalance with under/over-sampling, built sklearn pipelines, and tuned Decision Tree/Random Forest/Gradient Boosting models via GridSearchCV with k-fold validation.",
  },
  {
    title: "Volatility Forecasting (India) — GARCH + API",
    image: volatilityImg as ImageMetadata,
    repo: "https://github.com/yogesh2kk/WQU-Data-Science-Lab",
    status: "Case Study",
    highlight:
      "Built an end-to-end pipeline using defensive programming + TDD, SQLite repository classes, GARCH training, and a FastAPI service for model fitting and prediction serving.",
  },
  {
    title: "Walmart Weekly Sales Forecasting",
    image: walmartImg as ImageMetadata,
    repo: "https://github.com/yogesh2kk/walmart_sales_forecast",
    status: "Research Project",
    highlight:
      "Compared statistical, ML, and deep learning forecasting approaches with rigorous evaluation, backtesting, and visual diagnostics across store/department series.",
  },
  {
    title: "Music Recommendation System",
    image: recommenderImg as ImageMetadata,
    repo: "https://github.com/yogesh2kk/music-recommendation-system",
    status: "Project",
    highlight:
      "Built a recommendation pipeline using feature engineering and similarity scoring to surface personalized song recommendations with a clean, reproducible workflow.",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">
      Projects / Case Studies
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group rounded-2xl overflow-hidden border border-[var(--white-icon-tr)] bg-[#1414149c]">
            <div class="overflow-hidden">
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>

            <div class="p-5 space-y-3">
              <div class="flex items-start justify-between gap-4">
                <div class="min-w-0">
                  <h4 class="text-2xl font-semibold leading-tight">
                    {project.title}
                  </h4>
                  <span class="py-1 text-sm text-[var(--white-icon)]">
                    {project.status}
                  </span>
                </div>

                <div class="flex gap-2 shrink-0">
                  {/* ✅ Repo button */}
                  <a
                    target="_blank"
                    href={project.repo}
                    rel="noopener noreferrer"
                    aria-label="GitHub Repository"
                    class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] rounded-xl hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-6"
                    >
                      <path
                        d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
                      ></path>
                    </svg>
                  </a>

                  {/* ✅ “Open” button (same repo) */}
                  <a
                    target="_blank"
                    href={project.repo}
                    rel="noopener noreferrer"
                    aria-label="Open project"
                    class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] rounded-xl hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-6"
                    >
                      <path
                        d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"
                      />
                    </svg>
                  </a>
                </div>
              </div>

              <p class="text-sm text-[var(--white-icon)] leading-relaxed">
                {project.highlight}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <a
      target="_blank"
      href="https://github.com/yogesh2kk?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
    </a>
  </div>
</section>